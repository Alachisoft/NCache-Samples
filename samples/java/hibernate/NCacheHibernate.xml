<configuration>
<application-config application-id="myapp" enable-cache-exception="true" default-region-name="DefaultRegion" key-case-sensitivity="false">
	<cache-regions>
		<region name="SlidingExpirationRegion" cache-name="mycache" priority="default" expiration-type="sliding" expiration-period="8"/>
		<region name="DefaultRegion" cache-name="mycache" priority="default" expiration-type="none" expiration-period="0" />
	</cache-regions>
	
	<database-dependencies>
	<!-- Database dependency not supported with mysql. Use Oracle or SQL Server for using this feature-->
